<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    >

    <ImageView
        android:id="@+id/imBoutiqueThumb"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/nopic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_toRightOf="@id/imBoutiqueThumb"
        android:background="@color/white"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/tvBoutiqueTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textColor="@color/list_item_title"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tvBoutiqueName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="名字"
            android:layout_marginTop="20dp"
            android:textColor="@color/list_item_name"
            android:ellipsize="end"

            android:textSize="16sp" />
        <TextView
            android:id="@+id/tvBoutiqueDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="介绍"
            android:layout_marginTop="10dp"
            android:textColor="@color/list_item_title"
            android:ellipsize="end"
            android:textSize="16sp" />


    </LinearLayout>

</RelativeLayout>